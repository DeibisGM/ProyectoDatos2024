<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #fafafa;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="business.ReservacionesController">
    <children>
        <VBox spacing="20" alignment="CENTER"
              AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <padding>
                <Insets top="30" right="40" bottom="30" left="40"/>
            </padding>

            <Label text="Sistema de Reservaciones" style="-fx-text-fill: #2c3e50;">
                <font>
                    <Font name="System Bold" size="28"/>
                </font>
            </Label>

            <TableView fx:id="reservacionesTableView" maxWidth="500">
                <columns>
                    <TableColumn text="Nombre"/>
                    <TableColumn text="Identificación"/>
                    <TableColumn text="Forma de pago"/>
                    <TableColumn text="Correo electrónico"/>
                    <TableColumn text="Género"/>
                    <TableColumn text="Estado"/>
                    <TableColumn text="Total a pagar"/>
                </columns>
            </TableView>

            <HBox spacing="10">
                <children>
                    <TextField fx:id="nombreField" promptText="Nombre"/>
                    <TextField fx:id="idField" promptText="Identificación"/>
                    <ComboBox fx:id="pagoCombo" promptText="Forma de pago"
                              style="-fx-pref-width: 150px;">
                        <!-- Add payment options here -->
                    </ComboBox>
                    <TextField fx:id="correoField" promptText="Correo electrónico"/>
                    <ComboBox fx:id="generoCombo" promptText="Género"
                              style="-fx-pref-width: 100px;">
                        <!-- Add gender options here -->
                    </ComboBox>
                    <ComboBox fx:id="estadoCombo" promptText="Estado"
                              style="-fx-pref-width: 150px;">
                        <!-- Add state options here -->
                    </ComboBox>
                    <TextField fx:id="totalField" promptText="Total a pagar"/>
                </children>
            </HBox>

            <Button text="Hacer Reservación" onAction="#hacerReservacion"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;
                           -fx-padding: 8 16; -fx-cursor: hand;"/>
        </VBox>
    </children>
</AnchorPane>